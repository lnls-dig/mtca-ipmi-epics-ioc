# Calculate fan speed averages
record(calcout, "$(P)$(S)FAN_FRONT_AVG_CALC") {
		field(DESC, "Front fan average calculation")
		field(INPA, "$(P)$(S)FAN1 CPP")
		field(INPB, "$(P)$(S)FAN2 CPP")
		field(INPC, "$(P)$(S)FAN3 CPP")
		field(CALC, "(A+B+C)/3")
		field(OOPT, "On Change")
		field(DOPT, "Use CALC")
		field(OUT,  "$(P)$(S)FAN_FRONT_AVG PP")
		field(PINI, "YES")
}

record(ai, "$(P)$(S)FAN_FRONT_AVG") {
		field(DESC, "Front fan average")
		field(EGU,  "RPM")
		field(LOLO, "500")
