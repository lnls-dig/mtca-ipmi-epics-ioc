record(bo, "$(P)$(R)SensorScan-Cmd") {
    field(DESC, "Master record for scanning values")
    field(DTYP, "Python Device")
    field(SCAN, "5 second")
    field(OUT,  "@MTCACrate read_sensors")

    info(autosaveFields, "SCAN")
}

record(stringout, "$(P)$(R)Hostname-Cte") {
    field(DESC, "Crate host name")
    field(DTYP, "Python Device")
    field(PINI, "YES")
    field(OUT,  "@MTCACrate set_host")
    field(VAL,  "$(MCH_HOST)")
    field(FLNK, "$(P)$(R)Username-Cte")

    info(autosaveFields, "VAL")
}

record(stringout, "$(P)$(R)Username-Cte") {
    field(DESC, "Crate user name")
    field(DTYP, "Python Device")
    field(OUT,  "@MTCACrate set_user")
    field(FLNK, "$(P)$(R)Password-Cte")

    info(autosaveFields, "VAL")
}

# This may be able to move to an environment variable on the crate
record(stringout, "$(P)$(R)Password-Cte") {
    field(DESC, "Crate password")
    field(DTYP, "Python Device")
    field(OUT,  "@MTCACrate set_password")
    field(FLNK, "$(P)$(R)ReadFRUList-Cmd")

    info(autosaveFields, "VAL")
}

record(bo, "$(P)$(R)ReadFRUList-Cmd") {
    field(DESC, "Get crate FRU list")
    field(DTYP, "Python Device")
    field(OUT,  "@MTCACrate get_fru_list")
    field(SCAN, "Passive")

    info(autosaveFields, "SCAN")
}

record(bo, "$(P)$(R)Reset-Cmd") {
    field(DESC, "Reset crate")
    field(DTYP, "Python Device")
    field(OUT,  "@MTCACrate crate_reset")
    field(SCAN, "Passive")
}

record(stringin, "$(P)$(R)CrateID-Cte") {
    field(DESC, "Crate ID")
    field(VAL,  "$(CRATE_ID)")
    field(PINI, "YES")
}

record(stringin, "$(P)$(R)RackID-Cte") {
    field(DESC, "Rack ID")
    field(VAL,  "$(RACK_ID)")
    field(PINI, "YES")
}

# Calculate fan speed averages
record(calcout, "$(P)$(R)FanFrontAvg-Calc") {
    field(DESC, "Front fan average calculation")
    field(INPA, "$(P)$(R)$(CU1=CU01)FanFrontAvg-Mon CPP")
    field(INPB, "$(P)$(R)$(CU2=CU02)FanFrontAvg-Mon CPP")
    field(CALC, "(A+B)/2")
    field(OOPT, "On Change")
    field(DOPT, "Use CALC")
    field(OUT,  "$(P)$(R)FanFrontAvg-Mon PP")
    field(PINI, "NO")
}

record(ai, "$(P)$(R)FanFrontAvg-Mon") {
    field(DESC, "Front fan average")
    field(EGU,  "RPM")
    field(PREC, "0")
    field(LOLO, "500")
    field(LOW,  "1000")
    field(HIGH, "3500")
    field(HIHI, "4000")
    field(LLSV, "MAJOR")
    field(LSV,  "MINOR")
    field(HSV,  "MINOR")
    field(HHSV, "MAJOR")
}

