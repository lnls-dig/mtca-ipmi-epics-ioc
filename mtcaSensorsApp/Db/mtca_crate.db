# Calculate the average inlet temperature
record(calcout, "$(P)$(R)TempInletAvg-Calc") {
    field(DESC, "Crate average inlet temp calc")
    field(INPA, "$(P)$(R)PM02TempInlet-Mon CPP")
    field(INPB, "$(P)$(R)CU02Temp1-Mon CPP")
    field(INPC, "$(P)$(R)CU02Temp2-Mon CPP")
    field(INPD, "$(P)$(R)CU01Temp1-Mon CPP")
    field(INPE, "$(P)$(R)CU01Temp2-Mon CPP")
    field(CALC, "(A-4+B+C+D+E-1.5)/5")
    field(OOPT, "On Change")
    field(DOPT, "Use CALC")
    field(OUT,  "$(P)$(R)TempInletAvg-Mon PP")
    field(PINI, "YES")
}

record(ai, "$(P)$(R)TempInletAvg-Mon") {
    field(DESC, "Crate average inlet temp")
    field(EGU,  "C")
    field(PREC, "1")
}


